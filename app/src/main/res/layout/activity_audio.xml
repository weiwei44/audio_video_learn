<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mobile.indoorbuy.com.audio_video_learn.MainActivity">

    <Button
        android:id="@+id/btn_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始录音"/>
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止录音"
        app:layout_constraintLeft_toRightOf="@+id/btn_star"/>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放录音"
        app:layout_constraintTop_toBottomOf="@+id/btn_star"/>

    <Button
        android:id="@+id/btn_wav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建wav"
        app:layout_constraintLeft_toRightOf="@+id/btn_play"
        app:layout_constraintTop_toBottomOf="@+id/btn_star"/>

    <Button
        android:id="@+id/btn_wav_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放wav"
        app:layout_constraintLeft_toRightOf="@+id/btn_wav"
        app:layout_constraintTop_toBottomOf="@+id/btn_star"/>

</android.support.constraint.ConstraintLayout>
