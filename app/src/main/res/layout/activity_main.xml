<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.indoorbuy.com.audio_video_learn.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音视频学习课程"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/learn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn1"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sample_text" />

    <TextView
        android:id="@+id/learn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn2"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learn1" />

    <TextView
        android:id="@+id/learn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/less3"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learn2" />

    <TextView
        android:id="@+id/learn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/less4"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learn3" />

    <TextView
        android:id="@+id/learn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7. 学习 MediaCodec API，完成音频 AAC 硬编、硬解"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learn4" />

</android.support.constraint.ConstraintLayout>
