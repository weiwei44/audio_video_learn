<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mobile.indoorbuy.com.audio_video_learn.MainActivity">

    <Button
        android:id="@+id/btn_video_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取视频流"/>

    <Button
        android:id="@+id/btn_audio_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取音频流"
        app:layout_constraintTop_toBottomOf="@+id/btn_video_stream"/>

    <Button
        android:id="@+id/btn_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合并音视频流"
        app:layout_constraintTop_toBottomOf="@+id/btn_audio_stream"/>

</android.support.constraint.ConstraintLayout>
